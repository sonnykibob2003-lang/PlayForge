<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PlayForge Official Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/style.css" />
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark custom-navbar sticky-top">
        <div class="container">
            <a class="navbar-brand text-uppercase d-flex align-items-center" href="#">
                <img src="Assets/playforgelogo.png" alt="Logo" width="200" height="40" class="me-2">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/products">Games & Consoles</a></li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cart"><i class="bi bi-cart-check-fill fs-5"><span
                                    id="count"></span></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main>
        <!-- Hero Carousel Placeholder -->
        <section id="hero-carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#hero-carousel" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#hero-carousel" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#hero-carousel" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
            </div>

            <div class="carousel-inner">
                <div class="carousel-item active c-item">
                    <img src="/Assets/sonicracing3.jpg" class="d-block w-100 c-img" alt="Sonic Racing">
                    <div class="carousel-caption top-0 mt-4">
                        <p class="fs-3 mt-5 text-uppercase">Pedal to the metal</p>
                        <h1 class="display-1 fw-bolder text-capitalize">Sonic Racing 3</h1>
                    </div>
                </div>
                <div class="carousel-item c-item">
                    <img src="/Assets/codbo6.jpeg" class="d-block w-100 c-img" alt="Call of Duty">
                    <div class="carousel-caption top-0 mt-4">
                        <p class="fs-4 mt-5 text-uppercase">The Truth Lies</p>
                        <h1 class="display-1 fw-bolder text-capitalize fs-1">Call Of Duty : Black Ops 6</h1>
                    </div>
                </div>
                <div class="carousel-item c-item">
                    <img src="/Assets/ps5pro.jpg" class="d-block w-100 c-img" alt="PS5 Pro">
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#hero-carousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#hero-carousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </section>


        <!-- Platform Icons -->
        <section class="overview">
            <div class="container h-100 d-flex align-items-center">
                <div class="row w-100 text-center fs-4 text-white">
                    <div class="col-xl"><i class="bi bi-xbox me-2 fs-1"></i> XBOX</div>
                    <div class="col-xl"><i class="bi bi-playstation fs-1"></i> PLAYSTATION</div>
                    <div class="col-xl"><i class="bi bi-nintendo-switch fs-1"></i> NINTENDO</div>
                </div>
            </div>
        </section>

        <!-- Most Popular Products -->
        <section id="packages" class="pt-5 mt-5 mb-5">
            <h2 class="text-primary fs-1 fw-bold mb-3 text-center text-white">Most Popular</h2>
            <div class="container">
                <div class="package-grid row mt-4 g-4">
                    <% const popularProductNames=[ "Minecraft" , "SONY Play Station 5" , "GTA 5"
                        , "Nintendo Switch Oled" , "XBOX Series X" , "Call of Duty: Modern Warfare 2" ]; const
                        popularProducts=products.filter(p=> popularProductNames.includes(p.name));
                        %>
                        <% popularProducts.forEach(product=> { %>
                            <div class="col-12 col-lg-4">
                                <div class="card custom-card" style="width: 18rem;">
                                    <img src="<%= product.image %>" class="img-fluid d-block mx-auto card-img-top"
                                        alt="<%= product.name %>">
                                </div>
                            </div>
                            <% }); %>
                </div>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col">
                    <h4>company</h4>
                    <ul>
                        <li><a href="#">about us</a></li>
                        <li><a href="#">our services</a></li>
                        <li><a href="#">privacy policy</a></li>
                        <li><a href="#">affiliate program</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>get help</h4>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">shipping</a></li>
                        <li><a href="#">returns</a></li>
                        <li><a href="#">order status</a></li>
                        <li><a href="#">payment options</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Games & Consoles</h4>
                    <ul>
                        <li><a href="#">Games</a></li>
                        <li><a href="#">Consoles</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>follow us</h4>
                    <div class="social-links">
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-twitter-x"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-whatsapp"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>